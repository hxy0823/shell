echo "20 / 4 = $d"

# 取模
e=$((20 % 3))
echo "20 % 3 = $e"

# 幂运算
f=$((2 ** 4))
echo "2 ** 4 = $f"

# 自增
g=5
((g++))
echo "g++ = $g"

# 自减
h=5
((h--))
echo "h-- = $h"
